version: '2'
services:
  $AWS_ECS_CONTAINER_NAME:
    image: '$AWS_ECS_URL/$AWS_ECS_DOCKER_IMAGE'
    environment:
      - HOST=$HOST
      - PORT=$PORT
    ports:
      - '$PORT:$PORT'
    logging:
      driver: 'awslogs'
      options:
        awslogs-region: '$AWS_DEFAULT_REGION'
        awslogs-group: '$AWS_ECS_CLUSTER_NAME'
        awslogs-stream-prefix: 'registrator'